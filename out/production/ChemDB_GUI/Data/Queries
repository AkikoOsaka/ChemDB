create table Stoffdaten(STOFF_ID VARCHAR(32) PRIMARY KEY,
NAME VARCHAR(32),
HERSTELLER VARCHAR(32),
AGGREGATSZUSTAND VARCHAR(32),
MAXLADEMENGE REAL,
ARBEITSPLATZGRENZE REAL,
DATUM DATE,
VERWENDUNG VARCHAR(32),
STOFFANMERKUNG VARCHAR(32),
VERBOTSLISTEN_ID VARCHAR(32),
LAGER_ID VARCHAR(32),
BETRIEBSANWEISUNG_ID VARCHAR(32));

create table Lagerdaten(LAGER_ID VARCHAR(32) PRIMARY KEY,
ORTS_ID VARCHAR(32),
STOFF_ID VARCHAR (32),
LAGERMENGE REAL,
ANMERKUNG VARCHAR(255));

create table Verbotslistendaten(LISTEN_ID VARCHAR(32) PRIMARY KEY,
LISTENNAME VARCHAR(32));

insert into Stoffdaten (STOFF_ID, NAME, HERSTELLER, AGGREGATSZUSTAND , MAXLADEMENGE, ARBEITSPLATZGRENZE , DATUM , VERWENDUNG , STOFFANMERKUNG , VERBOTSLISTEN_ID , LAGER_ID , BETRIEBSANMERKUNG_ID   )
values ('STO_1234567890ABCDEF', 'Teststoff', 'Testfabrikator', 'Fl√ºssig' ,999,  999, '2018-08-18', 'Testzwecke', 'Testen', 'VRB_1234567890ABCDEF', 'LGR_1234567890ABCDEF', 'ANW_1234567890ABCDEF')

select NAME , HERSTELLER,  AGGREGATSZUSTAND, MAXLADEMENGE, ARBEITSPLATZGRENZE, DATUM, VERWENDUNG , LAGERMENGE, ANMERKUNG, BETRIENSANMERKUNG
from STOFFDATEN, LAGERDATEN, ANMERKUNGSDATEN
where STOFFDATEN.STOFF_ID = LAGERDATEN.STOFF_ID and
LAGERDATEN.LAGER_ID = STOFFDATEN.LAGER_ID and
STOFFDATEN.BETRIEBSANMERKUNG_ID = ANMERKUNGSDATEN.BETRIEBSANMERKUNG_ID